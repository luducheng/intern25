  keywords     = {95.75.Pq,97.10.Cv,97.10.Sj,Astrophysics,Methods: numerical,Stars: evolution,Stars: interior,Sun: evolution,Sun: interior},
  annotation   = {ADS Bibcode: 2008Ap\&SS.316...61M}
}

